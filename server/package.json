{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "dev": "tsnd --respawn --transpile-only --exit-child src/app.ts",
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:ci": "npm run -s lint && jest"
  },
  "engines": {
    "node": ">=16"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/build/"
    ],
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  },
  "keywords": [],
  "author": "Maksym Pozhydaiev <pogidaevmo@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.0.0",
    "@fastify/static": "^6.10.2",
    "@paralleldrive/cuid2": "^2.2.1",
    "@prisma/client": "^4.15.0",
    "dotenv": "^16.1.4",
    "fastify": "^4.17.0",
    "fastify-plugin": "^4.5.0",
    "fastify-zod": "^1.3.2",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3",
    "nodemailer-sendgrid": "^1.0.3",
    "pg": "^8.11.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.8",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "prettier": "^2.8.8",
    "prisma": "^4.16.2",
    "sinon": "^15.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed/index.ts"
  }
}